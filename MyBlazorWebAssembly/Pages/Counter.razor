@page "/counter"
@page "/counter-par/{header:int}/{isDeleted:bool?}"

<PageTitle>Counter</PageTitle>

<HeadContent>
    <meta name="description" content="Strona Blazor - meta desc"/>
    <meta name="keywords" content="programowanie, aplikacja"/>
</HeadContent>

<SectionContent SectionId="MainLayout.TopSection">
    <p>Podstrona Counter. Licznik: @currentCount</p>
</SectionContent>

<h1>Counter</h1>


<h2>Wartość parametru: @Header</h2>

<h2>Wartość parametru 2 [from query]: @Header2</h2>

<h2>IsDeleted:</h2>

@if (!IsDeleted.HasValue)
{
    <p>NULL</p>
}else if (IsDeleted.GetValueOrDefault())
{
    <p>TRUE</p>
}
else
{
    <p>FALSE</p>
}

<p role="status">Current count: @currentCount</p>

<button class="btn btn-primary" @onclick="IncrementCount">Click me</button>

<Component></Component>

<hr />

<button class="btn btn-primary my-3" @onclick="GoToIndex">Strona główna</button>

<h2>Studenci:</h2>
<ul>
    @foreach (var student in StudentRepo.Get())
    {
        <li>@student.Name</li>
    }
</ul>